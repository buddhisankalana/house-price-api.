name: CI Pipeline

on: push

jobs:
   test-my-code:
       runs-on: ubuntu-latest


    steps:
      - names: check out code
        uses: actions/checkout@v3

      - name: Set up Python
        uses: action/setup-python@v4
        with:
           python-version: '3.12'

      - name: Install dependencies
        run: |
          pip install fastapi uvicorn pytest httpx

      - name: Run tests
         run: |
           pytest
            
